<script type="application/javascript">
function clickMeEvent(obj) {
  if (obj.innerHTML == "Click Me") {
    obj.innerHTML = "Click Me<br>Click Me again right now";
    return;
  }
  if (obj.innerHTML == "Click Me<br>Click Me again right now") {
    obj.innerHTML = "JOHN CENA";  
    return; 
  }
  if (obj.innerHTML == "JOHN CENA") {
  obj.innerHTML = ":L";  
    return; 
  }
  if (obj.innerHTML == ":L") {
    obj.style.display = "none";
    return;
  }
}
</script>
